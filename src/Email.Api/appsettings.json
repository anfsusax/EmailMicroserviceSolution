{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "Email.Api",
    "Audience": "Email.Clients",
    "Secret": "change-me-in-production"
  },
  "RabbitMq": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "VirtualHost": "/",
    "UserName": "guest",
    "Password": "guest",
    "QueueName": "email-queue",
    "Durable": true
  },
  "Smtp": {
    "Host": "smtp-service",
    "Port": 1025,
    "UseSsl": false,
    "UserName": "",
    "Password": "",
    "FromName": "Billing Service",
    "FromAddress": "billing@example.com"
  },
  "EmailProcessing": {
    "MaxRetryAttempts": 5,
    "PrefetchCount": 10,
    "VisibilityTimeoutSeconds": 30
  },
  "EmailTemplates": {
    "Templates": {
      "boleto-padrao": "<p>Ol√° {{nome_cliente}},</p><p>Seu boleto vence em {{vencimento}} com valor {{valor}}.</p>"
    }
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317"
  }
}
